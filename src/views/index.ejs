<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Document</title>
</head>

<body class="m-5 py-2">



            <form action="/" method="post">
                <div class="mb-3">
                  <label for="barcode" class="form-label">Codigo de barras</label>
                  <input type="barcode" class="form-control" id="barcode" name="barcode" aria-describedby="emailHelp">
                  <div id="emailHelp" class="form-text">El codigo de barras no debe repetirse o no se registrara.</div>
                </div>


                <input type="text" name="description" placeholder="Descripci√≥n">
                <input type="text" name="brand" placeholder="Marca">
                <input type="number" name="price" placeholder="Precio">
                <input type="number" name="cost" placeholder="Costo">
                <input type="number" name="stock" placeholder="Stock">
                <input type="date" name="expiredDate" placeholder="Fecha de expiracion">
                <label for="status">Activo</label>
                <select class="form-select" size="3" aria-label="size 3 select example">
                    <option selected>Activo</option>
                    <option value="1">Si</option>
                    <option value="2">No</option>
                
                  </select>

                <button class="ui-shadow ui-btn ui-corner-all" type="submit">Guardar</button>


              </form>


        <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Codigo de barras</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Precio de venta</th>
                    <th scope="col">Costo de compra</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Fecha de caducidad</th>
                    <th scope="col">Estatus</th>
                    <th rowspan="2">Acciones</th>
                  </tr>
                </thead>
                <tbody>
                    <% products.forEach((product) =>{ %>
                  <tr>
                    <th scope="row">üç™</th>
                    <td> <%=product.barcode %> ></td>
                    <td><%=product.description %></td>
                    <td><%=product.brand %></td>
                    <td><%=product.price %></td>
                    <td><%=product.cost %></td>
                    <td><%=product.stock %></td>
                    <td><%=product.expiredDate %></td>
                    <%if(product.status==1){ %>
                    <td>Disponible</td>
                    <% }else{ %>
                    <td>No disponible</td>
                    <% } %>
                    <td><a href="" class="btn btn-warning">Editar</a></td>
                    <td><a href="" class="btn btn-danger">Eliminar</a></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
</body>

</html>